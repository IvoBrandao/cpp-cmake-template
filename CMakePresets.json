{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "arm-none-eabi-gcc",
            "hidden": true,
            "displayName": "GCC 11.2.0 arm-none-eabi-gcc",
            "description": "Using compilers: arm-none-eabi-gcc 11.2.0, arm-none-eabi-g++ 11.2.0",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "generator": "Unix Makefiles"
        },
        {
            "name": "arm-none-eabi-gcc-debug",
            "displayName": "GCC 11.2.0 arm-none-eabi-gcc Debug",
            "inherits": ["arm-none-eabi-gcc",
                         "debug"],
            "cacheVariables": {
                "HOST_ARCHITECTURE" : "x86-64",
                "HOST_PLATFORM" : "linux",
                "TARGET_ARCHITECTURE" : "arm-cm7",
                "TARGET_PLATFORM" : "none",
                "TARGET_TOOLCHAIN" : "arm-none-eabi-gcc"
            }
        },
        {
            "name": "arm-none-eabi-gcc-release",
            "displayName": "GCC 11.2.0 arm-none-eabi-gcc Release",
            "inherits": "arm-none-eabi-gcc",
            "inheritsCacheVariables": [
                "CMAKE_BUILD_TYPE"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }


    ],
    "buildPresets": [
        {
            "name": "debug",
            "hidden": true,
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "hidden": true,
            "configurePreset": "release"
        }
    ]
}